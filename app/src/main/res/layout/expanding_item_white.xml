<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expanding_item_id_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/text_view_value_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/remove_item"
        android:gravity="end"
        android:text="Value"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_view_category_name_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"

        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Category Name"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/text_view_description_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_category_name_white"
        android:text="Description"
        android:textColor="#FFFFFF"
        />

    <!--ImageView
        android:id="@+id/add_more_sub_items_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_action_add"/-->

    <ImageView
        android:id="@+id/remove_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"

        android:layout_marginEnd="8dp"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_delete" />


</RelativeLayout>