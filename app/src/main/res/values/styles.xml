<resources>

    <!-- Old base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Activity transitions
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@anim/slide_in_right</item>
        <item name="android:windowExitTransition">@anim/slide_in_left</item>-->
    </style>

    <!-- Base application theme positive. -->
    <style name="AppTheme.NoActionBarPositive" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name = "android:windowDrawsSystemBarBackgrounds">true</item>
        <item name = "android:statusBarColor">@android:color/transparent</item>
        <item name = "android:windowTranslucentStatus">true</item>
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>

    <!-- Base application theme negative. -->
    <style name="AppTheme.NoActionBarNegative" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/negativeBackgroundColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name = "android:windowDrawsSystemBarBackgrounds">true</item>
        <item name = "android:statusBarColor">@android:color/transparent</item>
        <item name = "android:windowTranslucentStatus">true</item>
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>

    <!-- Base application theme negative. -->
    <style name="CreateTransactionActivityTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/grayTextColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name = "android:windowDrawsSystemBarBackgrounds">true</item>
        <item name = "android:statusBarColor">@android:color/transparent</item>
        <item name = "android:windowTranslucentStatus">true</item>
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>

    <style name="TextBoxMaterial" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/positiveBackgroundColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ThemeOverlay.MySwitch" parent="">
        <item name="android:colorControlActivated">@color/negativeBackgroundColor</item>
        <item name="android:colorControlNormal">@color/positiveBackgroundColor</item>
        <item name="colorSwitchThumbNormal">@color/positiveBackgroundColor</item>
        <item name="android:colorForeground">@color/positiveBackgroundColor</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="FloatingButtonRemove">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_delete_white_selector</item>
    </style>

</resources>
